<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <solid android:color="#AA888888" />

            <corners android:radius="5dp" />

            <padding
                android:top="8dp"
                android:right="8dp"
                android:left="8dp"
                android:bottom="8dp" />
            <stroke
                android:width="1dp"
                android:color="#AA888888" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#3cb0a8" />
            <corners android:radius="5dp" />
            <padding
                android:top="8dp"
                android:right="8dp"
                android:left="8dp"
                android:bottom="8dp" />
            <stroke
                android:width="1dp"
                android:color="#3cb0a8" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3cb0a8" />
            <corners android:radius="5dp" />
            <padding
                android:top="8dp"
                android:right="8dp"
                android:left="8dp"
                android:bottom="8dp" />
            <stroke
                android:width="1dp"
                android:color="#3cb0a8" />
        </shape>
    </item>
</selector>