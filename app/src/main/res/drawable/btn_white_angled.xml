<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F2FFBF00" />

            <padding
                android:top="8dp"
                android:right="8dp"
                android:left="8dp"
                android:bottom="8dp" />
            <stroke
                android:width="1dp"
                android:color="#F2FFBF00" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/white" />

            <padding
                android:top="8dp"
                android:right="8dp"
                android:left="8dp"
                android:bottom="8dp" />

            <stroke
                android:width="1dp"
                android:color="#F2FFBF00" />
        </shape>
    </item>


</selector>