<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".member_regist">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="25sp"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/nanumgothicextrabold"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="10dp"
            android:text="이메일주소"
            android:textAlignment="center"
            android:fontFamily="@font/nanumgothic"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/User_email"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="3dp"
            android:ems="10"
            android:hint="이메일를 입력해주세요"
            android:inputType="text|textPersonName"
            android:textSize="14sp" />

        <Button
            android:id="@+id/same_check"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_gray"
            android:fontFamily="@font/nanumgothicbold"
            android:text="중복확인"
            android:textColor="#FFFFFFFF"
            android:enabled="false"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:text="비밀번호"
            android:fontFamily="@font/nanumgothic"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/User_password"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:text="비밀번호 확인"
            android:fontFamily="@font/nanumgothic"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="6dp"
            android:ems="10"
            android:hint="비밀번호를 다시 입력해주세요"
            android:inputType="textPassword"
            android:textSize="14sp"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:text="닉네임"
            android:fontFamily="@font/nanumgothic"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/User_name"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="닉네임을 입력해주세요"
            android:inputType="textPersonName"
            android:textSize="14sp"

            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:text="휴대전화번호"
            android:fontFamily="@font/nanumgothic"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/User_phone"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="휴대전화번호를 입력해주세요"
            android:inputType="phone"
            android:textSize="14sp"

            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:text="@string/주소"
            android:fontFamily="@font/nanumgothic"
             />

        <EditText
            android:id="@+id/User_address"
            android:layout_width="340dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:ems="10"
            android:hint="주소를 입력해주세요"
            android:inputType="textPostalAddress"
            android:textSize="14sp"
            android:layout_gravity="center"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/상세주소"
            android:fontFamily="@font/nanumgothic"
             />

        <EditText
            android:id="@+id/User_address2"
            android:layout_width="340dp"
            android:layout_height="43dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:ems="10"
            android:hint="상세주소를 입력해주세요"
            android:textSize="14sp"
            android:layout_gravity="center"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_white"
            android:fontFamily="@font/nanumgothicbold"
            android:onClick="onClick"
            android:text="@string/취소"
            android:textColor="@drawable/btn_text_yellow" />

        <Button
            android:id="@+id/btn_bucket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_gray"
            android:fontFamily="@font/nanumgothicbold"
            android:onClick="onClick"
            android:text="@string/확인"
            android:enabled="false"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

    <EditText
        android:id="@+id/User_Point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="gone" />

</LinearLayout>